				var newdata=[];
				for (i = dif*24; i < dif*24+24; i++) {
					newdata.push([i%24, load[i], res[i], grid[i], load_original[i], grid_original[i], storage[i]]); 
				}
				data.addRows(newdata);
					
				chart.draw(data, options);
			}
		});
	});
	
	
</script>


	
