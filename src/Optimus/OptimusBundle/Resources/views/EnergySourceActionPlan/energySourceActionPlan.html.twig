							{{dataActionPlan[i/24].load_original[i%24] }}, 
					  {% endfor %} 
					  {{dataActionPlan[6].load_original[167%24] }} ];
					  
	var storage = [{% for i in 0..166 %}
							{{dataActionPlan[i/24].storage[i%24] }}, 
