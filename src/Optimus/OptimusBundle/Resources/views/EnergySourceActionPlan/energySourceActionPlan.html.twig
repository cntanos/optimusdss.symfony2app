	google.load('visualization', '1', {packages: ['corechart', 'line']});
    google.setOnLoadCallback(drawChart);
	var data;
	var options;
	var chart;
	
	var res = [{% for i in 0..166 %}
							{{dataActionPlan[i/24].res[i%24] }}, 
