	<script>
		$(function() {
			$(".buttonBig").button();
			$( "#addBuildingForm" ).dialog({
				autoOpen: false,
				/*height: 300,*/
				width: 600,
				modal: true,
				buttons: {					
					/*Cancel: function() {
