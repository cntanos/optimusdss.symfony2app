{% extends '::base.html.twig' %}
{# extends Bundle - carpeta - archivo twig#}

{% block body %}


    <div id="container">
        <div id="header" onclick="location.href='{{ path('init') }}';" style="cursor:pointer; display: inline-block;">
            <h3>OPTIMUS DSS - Sant Cugat</h3>
            <div style="float:right; width: 18%; margin: -20px 0 5px 20px;">
                <div class="titleContentDescription" style="float: left; padding: 5px; color:white; font-size:12px;"><strong>Logged as:</strong> {{app.user.lastname}} </div>
                <div style="float: left; background-color:#ddd; margin: 0 5px 0 23px ; padding:5px 15px; font-size: 12px; cursor:pointer;" onclick="location.href='{{ path('logout') }}';"><strong>Log out</strong></div>
            </div>
        </div>



        <div id="main">
            {% block javascripts %}{% endblock %}
            {% block content %}{% endblock %}
        </div>


        <div id="footer" style="background-color:#2e75b6; width:100%; height:40px;">

        </div>
    </div>


{% endblock %}